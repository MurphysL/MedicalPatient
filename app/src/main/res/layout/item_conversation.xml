<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_70"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dimen_70">

        <ImageView
            android:id="@+id/iv_recent_avatar"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50"
            android:layout_gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/dimen_14"
            android:layout_marginBottom="@dimen/dimen_14"
            android:layout_marginLeft="@dimen/dimen_16"
            android:src="@mipmap/doctor_logo"
            />

        <TextView
            android:id="@+id/tv_recent_name"
            android:layout_width="wrap_content"
            android:layout_height="25.0dip"
            android:layout_marginTop="@dimen/dimen_14"
            android:layout_marginLeft="@dimen/dimen_18"
            android:layout_marginRight="58.0dip"
            android:textColor="@color/black_de"
            android:layout_toRightOf="@id/iv_recent_avatar"
            android:ellipsize="end"
            android:gravity="left|center"
            android:singleLine="true"
            android:textSize="@dimen/font_18"
            />

        <TextView
            android:id="@+id/tv_recent_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/grey_700"
            android:layout_below="@id/tv_recent_name"
            android:layout_toRightOf="@id/iv_recent_avatar"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginLeft="@dimen/dimen_18"
            android:layout_marginRight="@dimen/dimen_40"
            android:layout_marginBottom="@dimen/dimen_10"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/font_10" />

        <TextView
            android:id="@+id/tv_recent_time"
            android:layout_width="wrap_content"
            android:layout_height="25.0dip"
            android:layout_above="@id/tv_recent_msg"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginRight="10dip"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="0.0dip"
            android:singleLine="true"
            android:textSize="@dimen/font_10" />

        <TextView
            android:id="@+id/tv_recent_unread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_recent_time"
            android:textColor="@color/grey_0"
            android:layout_marginRight="10.0dip"
            android:layout_marginBottom="@dimen/dimen_5"
            android:paddingLeft="@dimen/dimen_5"
            android:paddingRight="@dimen/dimen_5"
            android:paddingTop="@dimen/dimen_3"
            android:paddingBottom="@dimen/dimen_3"
            android:visibility="gone"
            android:textSize="13.0dip" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size_1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dimen_70"
        android:background="@color/grey_300" >
    </View>

</RelativeLayout>